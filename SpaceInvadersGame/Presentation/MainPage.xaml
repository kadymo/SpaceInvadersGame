<Page x:Class="SpaceInvadersGame.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SpaceInvadersGame"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <ScrollViewer IsTabStop="True">
      <Grid>
          <Grid.Background>
              <ImageBrush ImageSource="ms-appx:///Assets/SpaceBackground.jpg"></ImageBrush>
          </Grid.Background>

          <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition/>
          </Grid.RowDefinitions>

          <StackPanel>
              <TextBlock x:Name="Score" FontWeight="Bold" FontSize="20" Foreground="red"  Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}" />
          </StackPanel>

          <MediaPlayerElement x:Name="SfxPlayer1" AutoPlay="False"></MediaPlayerElement>
          <MediaPlayerElement x:Name="SfxPlayer2" AutoPlay="False"></MediaPlayerElement>
          <MediaPlayerElement x:Name="SfxPlayer3" AutoPlay="False"></MediaPlayerElement>
          <Canvas x:Name="GameCanvas" Margin="50" Grid.Row="1"/>
      </Grid>
  </ScrollViewer>
</Page>
