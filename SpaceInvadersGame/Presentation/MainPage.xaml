<Page x:Class="SpaceInvadersGame.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SpaceInvadersGame"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <ScrollViewer IsTabStop="True">
      <Grid>
          <Canvas x:Name="GameCanvas" Background="#008000">
              <Rectangle Fill="#000"  Width="800" Height="150" Canvas.Left="0" Canvas.Top="0" Canvas.ZIndex="0" />
          </Canvas>
      </Grid>
  </ScrollViewer>
</Page>
